{% extends 'base.html.twig' %}

{% block title %}Register - PharmaCare{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center" style="padding-top: 3rem;">
        <div class="col-md-6">
            <div class="card animate-fade-in">
                <div class="card-header text-center">
                    <i class="bi bi-person-plus-fill display-4 mb-3"></i>
                    <h4 class="mb-0">Create New Account</h4>
                    <p class="mb-0 mt-2 opacity-75 small">Join PharmaCare today</p>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="name" class="form-label">
                                    <i class="bi bi-person me-2"></i>Full Name
                                </label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       placeholder="John Doe" required autofocus>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       placeholder="your@email.com" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">
                                    <i class="bi bi-telephone me-2"></i>Phone Number
                                </label>
                                <input type="tel" class="form-control" id="phone" name="phone" 
                                       placeholder="+216 12 345 678" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-key me-2"></i>Password
                            </label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   placeholder="Create a strong password" required>
                            <div class="form-text">Password must be at least 6 characters long</div>
                        </div>

                        <div class="mb-4">
                            <label for="role" class="form-label">
                                <i class="bi bi-shield-check me-2"></i>Account Type
                            </label>
                            <select class="form-select" id="role" name="role" required>
                                <option value="">Select your role...</option>
                                <option value="ROLE_PHARMACY">Pharmacy</option>
                                <option value="ROLE_SUPPLIER">Supplier</option>
                                <option value="ROLE_DELIVERY">Delivery Staff</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-person-check me-2"></i>Create Account
                            </button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Already have an account? 
                                <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold">Sign In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
