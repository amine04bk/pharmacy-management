{% extends 'base.html.twig' %}

{% block title %}Login - PharmaCare{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center" style="padding-top: 4rem;">
        <div class="col-md-5">
            <div class="card animate-fade-in">
                <div class="card-header text-center">
                    <i class="bi bi-shield-lock display-4 mb-3"></i>
                    <h4 class="mb-0">Welcome Back</h4>
                    <p class="mb-0 mt-2 opacity-75 small">Sign in to your account</p>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>Email Address
                            </label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="{{ last_username }}" placeholder="your@email.com" required autofocus>
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">
                                <i class="bi bi-key me-2"></i>Password
                            </label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   placeholder="Enter your password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Don't have an account? 
                                <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold">Register Now</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
