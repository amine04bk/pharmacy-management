{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }} - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-cart"></i> Order Details</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('order_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row g-4">
        <!-- Order Information -->
        <div class="col-lg-8">
            <!-- Order Header -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-info-circle me-2"></i>Order Information</span>
                    {% if order.status == 'pending' %}
                        <span class="badge bg-warning">
                            <i class="bi bi-clock me-1"></i>Pending
                        </span>
                    {% elseif order.status == 'completed' %}
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle me-1"></i>Completed
                        </span>
                    {% else %}
                        <span class="badge bg-danger">
                            <i class="bi bi-x-circle me-1"></i>Cancelled
                        </span>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Order ID</h5>
                            <h3>#{{ order.id }}</h3>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Order Date</h5>
                            <h4>
                                <i class="bi bi-calendar me-2"></i>
                                {{ order.orderDate|date('F j, Y') }}
                            </h4>
                            <small class="text-muted">{{ order.orderDate|date('H:i:s') }}</small>
                        </div>
                    </div>

                    <!-- Medicine Details -->
                    <div class="mb-4 p-3 rounded" style="background: linear-gradient(135deg, rgba(79,70,229,0.1), rgba(6,182,212,0.1))">
                        <h5 class="mb-3"><i class="bi bi-capsule me-2"></i>Medicine Details</h5>
                        <div class="row">
                            <div class="col-md-8">
                                <h4 class="mb-2">{{ order.medicine.name }}</h4>
                                <p class="text-muted mb-2">{{ order.medicine.description }}</p>
                                <span class="badge bg-primary">{{ order.medicine.category }}</span>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="mb-2">
                                    <small class="text-muted d-block">Unit Price</small>
                                    <h5 class="mb-0">{{ order.medicine.price|number_format(3) }} TND</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quantity & Price -->
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Quantity Ordered</div>
                                <h4 class="mb-0"><span class="badge bg-info">{{ order.quantity }}</span> units</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Unit Price</div>
                                <h4 class="mb-0 text-primary">{{ order.medicine.price|number_format(3) }} TND</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 rounded" style="background: linear-gradient(135deg, rgba(16,185,129,0.1), rgba(5,150,105,0.2))">
                                <div class="text-muted small mb-1">Total Price</div>
                                <h3 class="mb-0 text-success">{{ (order.quantity * order.medicine.price)|number_format(2) }} TND</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supplier Info -->
            <div class="row g-4 mb-4">
                <div class="col-md-12">
                    <div class="card h-100">
                        <div class="card-header">
                            <i class="bi bi-truck me-2"></i>Supplier Information
                        </div>
                        <div class="card-body">
                            <h5 class="mb-3">{{ order.supplier.name }}</h5>
                            <div class="mb-2">
                                <i class="bi bi-envelope me-2 text-muted"></i>
                                <a href="mailto:{{ order.supplier.email }}">{{ order.supplier.email }}</a>
                            </div>
                            <div class="mb-2">
                                <i class="bi bi-telephone me-2 text-muted"></i>
                                <a href="tel:{{ order.supplier.phone }}">{{ order.supplier.phone }}</a>
                            </div>
                            {% if order.supplier.address %}
                            <div>
                                <i class="bi bi-geo-alt me-2 text-muted"></i>
                                {{ order.supplier.address }}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            {% if order.status == 'pending' %}
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i>Order Actions
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <form method="post" action="{{ path('order_complete', {id: order.id}) }}" class="d-inline">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Mark as Completed
                            </button>
                        </form>
                        <form method="post" action="{{ path('order_cancel', {id: order.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to cancel this order?')" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-circle me-2"></i>Cancel Order
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Order Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-receipt me-2"></i>Order Summary
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">Order ID</span>
                        <strong>#{{ order.id }}</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">Status</span>
                        {% if order.status == 'pending' %}
                            <span class="badge bg-warning">Pending</span>
                        {% elseif order.status == 'completed' %}
                            <span class="badge bg-success">Completed</span>
                        {% else %}
                            <span class="badge bg-danger">Cancelled</span>
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">Quantity</span>
                        <strong>{{ order.quantity }} units</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Total Amount</span>
                        <strong class="text-success fs-5">{{ (order.quantity * order.medicine.price)|number_format(2) }} TND</strong>
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-clock-history me-2"></i>Order Timeline
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Order Created</h6>
                                <small class="text-muted">{{ order.orderDate|date('F j, Y H:i') }}</small>
                            </div>
                        </div>
                        {% if order.status == 'completed' %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Order Completed</h6>
                                <small class="text-muted">Successfully delivered</small>
                            </div>
                        </div>
                        {% elseif order.status == 'cancelled' %}
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Order Cancelled</h6>
                                <small class="text-muted">Order was cancelled</small>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}
.timeline::before {
    content: '';
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #4F46E5, #06B6D4);
}
.timeline-item {
    position: relative;
    margin-bottom: 20px;
}
.timeline-marker {
    position: absolute;
    left: -26px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 3px solid white;
}
.timeline-content {
    padding-left: 10px;
}
</style>
{% endblock %}
