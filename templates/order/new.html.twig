{% extends 'base.html.twig' %}

{% block title %}Create New Order - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-plus-circle"></i> Create New Order</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('order_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-cart me-2"></i>Order Information
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Supplier Selection -->
                        <div class="mb-4">
                            <label for="supplier" class="form-label">
                                <i class="bi bi-truck me-2"></i>Supplier
                            </label>
                            <select class="form-select" id="supplier" name="supplier" required>
                                <option value="">Select Supplier</option>
                                {% for supplier in suppliers %}
                                    <option value="{{ supplier.id }}">{{ supplier.name }}</option>
                                {% endfor %}
                            </select>
                            <small class="text-muted">Choose the supplier</small>
                        </div>

                        <!-- Medicine Selection -->
                        <div class="mb-4">
                            <label for="medicine" class="form-label">
                                <i class="bi bi-capsule me-2"></i>Medicine
                            </label>
                            <select class="form-select" id="medicine" name="medicine" required>
                                <option value="">Select Medicine</option>
                                {% for medicine in medicines %}
                                    <option value="{{ medicine.id }}" 
                                            data-price="{{ medicine.price }}"
                                            data-category="{{ medicine.category }}">
                                        {{ medicine.name }} - {{ medicine.category }} ({{ medicine.price|number_format(3) }} TND)
                                    </option>
                                {% endfor %}
                            </select>
                            <small class="text-muted">Select the medicine to order</small>
                        </div>

                        <!-- Medicine Details Display -->
                        <div id="medicineDetails" class="alert alert-info mb-4" style="display: none;">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-info-circle fs-4 me-3"></i>
                                <div class="flex-grow-1">
                                    <h6 class="mb-2">Selected Medicine Details</h6>
                                    <div id="medicineInfo"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-6 mb-4">
                                <label for="quantity" class="form-label">
                                    <i class="bi bi-123 me-2"></i>Quantity
                                </label>
                                <input type="number" class="form-control" id="quantity" name="quantity" 
                                       min="1" required>
                                <small class="text-muted">Number of units to order</small>
                            </div>

                            <!-- Total Price (Calculated) -->
                            <div class="col-md-6 mb-4">
                                <label class="form-label">
                                    <i class="bi bi-currency-dollar me-2"></i>Total Price
                                </label>
                                <div class="p-3 rounded" style="background: linear-gradient(135deg, rgba(16,185,129,0.1), rgba(5,150,105,0.2))">
                                    <h4 class="mb-0 text-success" id="totalPrice">0.00 TND</h4>
                                </div>
                                <small class="text-muted">Calculated automatically</small>
                            </div>
                        </div>

                        <!-- Order Date -->
                        <div class="mb-4">
                            <label for="order_date" class="form-label">
                                <i class="bi bi-calendar me-2"></i>Order Date
                            </label>
                            <input type="datetime-local" class="form-control" id="order_date" 
                                   name="order_date" value="{{ 'now'|date('Y-m-d\\TH:i') }}" required>
                        </div>

                        <!-- Order Summary -->
                        <div class="card mb-4" style="background: linear-gradient(135deg, rgba(79,70,229,0.05), rgba(6,182,212,0.05))">
                            <div class="card-body">
                                <h5 class="mb-3"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <div class="text-muted small">Supplier</div>
                                        <div id="summarySupplier" class="fw-bold">Not selected</div>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <div class="text-muted small">Medicine</div>
                                        <div id="summaryMedicine" class="fw-bold">Not selected</div>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <div class="text-muted small">Quantity</div>
                                        <div id="summaryQuantity" class="fw-bold">0</div>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <div class="text-muted small">Unit Price</div>
                                        <div id="summaryUnitPrice" class="fw-bold">0.00 TND</div>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <div class="text-muted small">Total Amount</div>
                                        <div id="summaryTotal" class="fw-bold text-success">0.00 TND</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('order_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Create Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const medicineSelect = document.getElementById('medicine');
    const quantityInput = document.getElementById('quantity');
    const supplierSelect = document.getElementById('supplier');
    const medicineDetails = document.getElementById('medicineDetails');
    const medicineInfo = document.getElementById('medicineInfo');
    
    let currentPrice = 0;
    
    // Update medicine details
    medicineSelect.addEventListener('change', function() {
        const option = this.options[this.selectedIndex];
        if (option.value) {
            currentPrice = parseFloat(option.dataset.price);
            const category = option.dataset.category;
            
            medicineInfo.innerHTML = `
                <strong>${option.text.split(' - ')[0]}</strong><br>
                <span class="badge bg-primary">${category}</span>
                <span class="ms-2">Unit Price: ${currentPrice.toFixed(3)} TND</span>
            `;
            medicineDetails.style.display = 'block';
            document.getElementById('summaryMedicine').textContent = option.text.split(' - ')[0];
            document.getElementById('summaryUnitPrice').textContent = currentPrice.toFixed(3) + ' TND';
        } else {
            medicineDetails.style.display = 'none';
            currentPrice = 0;
            document.getElementById('summaryMedicine').textContent = 'Not selected';
            document.getElementById('summaryUnitPrice').textContent = '0.00 TND';
        }
        calculateTotal();
    });
    
    // Update quantity
    quantityInput.addEventListener('input', function() {
        document.getElementById('summaryQuantity').textContent = this.value || '0';
        calculateTotal();
    });
    
    // Update supplier
    supplierSelect.addEventListener('change', function() {
        const option = this.options[this.selectedIndex];
        document.getElementById('summarySupplier').textContent = option.value ? option.text : 'Not selected';
    });
    
    // Calculate total
    function calculateTotal() {
        const quantity = parseFloat(quantityInput.value) || 0;
        const total = currentPrice * quantity;
        document.getElementById('totalPrice').textContent = total.toFixed(2) + ' TND';
        document.getElementById('summaryTotal').textContent = total.toFixed(2) + ' TND';
    }
});
</script>
{% endblock %}
