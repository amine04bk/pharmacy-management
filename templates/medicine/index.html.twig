{% extends 'base.html.twig' %}

{% block title %}Medicine Catalog - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-capsule"></i> Medicine Catalog</h1>
</div>

<div class="animate-fade-in">
    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ medicines|length }}</h3>
                        <p><i class="bi bi-capsule me-2"></i>Total Medicines</p>
                    </div>
                    <i class="bi bi-capsule"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ medicines|filter(m => m.category == 'Analgesics')|length }}</h3>
                        <p><i class="bi bi-bandaid me-2"></i>Analgesics</p>
                    </div>
                    <i class="bi bi-bandaid"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ medicines|filter(m => m.category == 'Antibiotics')|length }}</h3>
                        <p><i class="bi bi-capsule-pill me-2"></i>Antibiotics</p>
                    </div>
                    <i class="bi bi-capsule-pill"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card secondary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ medicines|filter(m => m.category == 'Vitamins')|length }}</h3>
                        <p><i class="bi bi-heart-pulse me-2"></i>Vitamins</p>
                    </div>
                    <i class="bi bi-heart-pulse"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Medicines Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list me-2"></i>All Medicines</span>
            <div class="d-flex gap-2">
                <input type="search" class="form-control form-control-sm" placeholder="Search medicines..." id="searchMedicines">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-filter"></i> Category
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item filter-category" href="#" data-category="all">All Categories</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Analgesics">Analgesics</a></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Antibiotics">Antibiotics</a></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Vitamins">Vitamins</a></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Supplements">Supplements</a></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Cardiovascular">Cardiovascular</a></li>
                        <li><a class="dropdown-item filter-category" href="#" data-category="Digestive">Digestive</a></li>
                    </ul>
                </div>
                <a href="{{ path('medicine_new') }}" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Medicine
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="medicinesTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Purchase Price</th>
                            <th>Selling Price</th>
                            <th>Expiration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for medicine in medicines %}
                        <tr data-category="{{ medicine.category }}">
                            <td><strong>#{{ medicine.id }}</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-capsule fs-4 text-primary me-2"></i>
                                    <strong>{{ medicine.name }}</strong>
                                </div>
                            </td>
                            <td>
                                {% set categoryColors = {
                                    'Analgesics': 'primary',
                                    'Antibiotics': 'warning',
                                    'Vitamins': 'success',
                                    'Supplements': 'info',
                                    'Cardiovascular': 'danger',
                                    'Digestive': 'secondary'
                                } %}
                                <span class="badge bg-{{ categoryColors[medicine.category] ?? 'secondary' }}">
                                    {{ medicine.category }}
                                </span>
                            </td>
                            <td>
                                <span class="text-muted small">{{ medicine.description|length > 50 ? medicine.description|slice(0, 50) ~ '...' : medicine.description }}</span>
                            </td>
                            <td>
                                {% if medicine.quantity < 10 %}
                                    <span class="badge bg-danger">{{ medicine.quantity }}</span>
                                {% elseif medicine.quantity < 30 %}
                                    <span class="badge bg-warning">{{ medicine.quantity }}</span>
                                {% else %}
                                    <span class="badge bg-success">{{ medicine.quantity }}</span>
                                {% endif %}
                            </td>
                            <td>{{ medicine.price|number_format(3) }} TND</td>
                            <td>{{ (medicine.price * 1.2)|number_format(3) }} TND</td>
                            <td>
                                {% if medicine.expirationDate %}
                                    {% set daysUntilExpiry = date(medicine.expirationDate).diff(date()).days %}
                                    {% if daysUntilExpiry < 30 %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle me-1"></i>{{ medicine.expirationDate|date('Y-m-d') }}
                                        </span>
                                    {% elseif daysUntilExpiry < 90 %}
                                        <span class="badge bg-warning">{{ medicine.expirationDate|date('Y-m-d') }}</span>
                                    {% else %}
                                        {{ medicine.expirationDate|date('Y-m-d') }}
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('medicine_show', {id: medicine.id}) }}" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('medicine_edit', {id: medicine.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('medicine_delete', {id: medicine.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this medicine?')" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
// Search functionality
document.getElementById('searchMedicines').addEventListener('keyup', function() {
    var input = this.value.toLowerCase();
    var rows = document.querySelectorAll('#medicinesTable tbody tr');
    
    rows.forEach(function(row) {
        var text = row.textContent.toLowerCase();
        row.style.display = text.includes(input) ? '' : 'none';
    });
});

// Category filter
document.querySelectorAll('.filter-category').forEach(function(link) {
    link.addEventListener('click', function(e) {
        e.preventDefault();
        var category = this.dataset.category;
        var rows = document.querySelectorAll('#medicinesTable tbody tr');
        
        rows.forEach(function(row) {
            if (category === 'all' || row.dataset.category === category) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
});
</script>
{% endblock %}
