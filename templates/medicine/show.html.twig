{% extends 'base.html.twig' %}

{% block title %}{{ medicine.name }} - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-capsule"></i> Medicine Details</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('medicine_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Catalog
        </a>
    </div>

    <div class="row g-4">
        <!-- Medicine Information -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Medicine Information
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Medicine Name</h5>
                            <h3>{{ medicine.name }}</h3>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Category</h5>
                            {% set categoryColors = {
                                'Analgesics': 'primary',
                                'Antibiotics': 'warning',
                                'Vitamins': 'success',
                                'Supplements': 'info',
                                'Cardiovascular': 'danger',
                                'Digestive': 'secondary'
                            } %}
                            <h4>
                                <span class="badge bg-{{ categoryColors[medicine.category] ?? 'secondary' }}">
                                    {{ medicine.category }}
                                </span>
                            </h4>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-2">Description</h5>
                        <p>{{ medicine.description }}</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Available Quantity</div>
                                {% if medicine.quantity < 10 %}
                                    <h4 class="mb-0"><span class="badge bg-danger">{{ medicine.quantity }}</span></h4>
                                    <small class="text-danger">Low Stock!</small>
                                {% elseif medicine.quantity < 30 %}
                                    <h4 class="mb-0"><span class="badge bg-warning">{{ medicine.quantity }}</span></h4>
                                    <small class="text-warning">Warning</small>
                                {% else %}
                                    <h4 class="mb-0"><span class="badge bg-success">{{ medicine.quantity }}</span></h4>
                                    <small class="text-success">In Stock</small>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Base Price</div>
                                <h4 class="mb-0 text-info">{{ medicine.price|number_format(3) }} TND</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Selling Price (20% markup)</div>
                                <h4 class="mb-0 text-success">{{ (medicine.price * 1.2)|number_format(3) }} TND</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <div class="text-muted small mb-1">Profit Per Unit</div>
                                <h4 class="mb-0 text-primary">{{ (medicine.price * 0.2)|number_format(3) }} TND</h4>
                            </div>
                        </div>
                    </div>

                    {% if medicine.expirationDate %}
                    <div class="mt-4 p-3 rounded" style="background: linear-gradient(135deg, rgba(255,193,7,0.1), rgba(220,53,69,0.1))">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-x fs-2 text-danger me-3"></i>
                            <div>
                                <h6 class="mb-1">Expiration Date</h6>
                                {% set daysUntilExpiry = date(medicine.expirationDate).diff(date()).days %}
                                {% if daysUntilExpiry < 0 %}
                                    <h5 class="text-danger mb-0">
                                        {{ medicine.expirationDate|date('F j, Y') }} - EXPIRED
                                    </h5>
                                {% elseif daysUntilExpiry < 30 %}
                                    <h5 class="text-danger mb-0">
                                        {{ medicine.expirationDate|date('F j, Y') }} - {{ daysUntilExpiry }} days remaining
                                    </h5>
                                {% elseif daysUntilExpiry < 90 %}
                                    <h5 class="text-warning mb-0">
                                        {{ medicine.expirationDate|date('F j, Y') }} - {{ daysUntilExpiry }} days remaining
                                    </h5>
                                {% else %}
                                    <h5 class="text-success mb-0">{{ medicine.expirationDate|date('F j, Y') }}</h5>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-gear me-2"></i>Actions
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <a href="{{ path('medicine_edit', {id: medicine.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Medicine
                        </a>
                        <form method="post" action="{{ path('medicine_delete', {id: medicine.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this medicine?')" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Delete Medicine
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Stats -->
        <div class="col-lg-4">
            <!-- Inventory Status -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-bar-chart me-2"></i>Inventory Status
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Total Value</span>
                            <strong>{{ (medicine.quantity * medicine.price)|number_format(2) }} TND</strong>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: 100%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Stock Level</span>
                            {% if medicine.quantity < 10 %}
                                <strong class="text-danger">Critical</strong>
                            {% elseif medicine.quantity < 30 %}
                                <strong class="text-warning">Low</strong>
                            {% else %}
                                <strong class="text-success">Good</strong>
                            {% endif %}
                        </div>
                        <div class="progress" style="height: 8px;">
                            {% set stockPercentage = (medicine.quantity / 100 * 100)|round %}
                            {% if stockPercentage > 100 %}{% set stockPercentage = 100 %}{% endif %}
                            <div class="progress-bar bg-{{ medicine.quantity < 10 ? 'danger' : (medicine.quantity < 30 ? 'warning' : 'success') }}" 
                                 style="width: {{ stockPercentage }}%"></div>
                        </div>
                    </div>

                    <div class="alert alert-info mb-0">
                        <small>
                            <i class="bi bi-info-circle me-2"></i>
                            Recommended reorder point: 20 units
                        </small>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-graph-up me-2"></i>Quick Stats
                </div>
                <div class="card-body">
                    <div class="stat-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Medicine ID</span>
                            <strong>#{{ medicine.id }}</strong>
                        </div>
                    </div>
                    <div class="stat-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Category</span>
                            <strong>{{ medicine.category }}</strong>
                        </div>
                    </div>
                    <div class="stat-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Units in Stock</span>
                            <strong>{{ medicine.quantity }}</strong>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Inventory Value</span>
                            <strong class="text-success">{{ (medicine.quantity * medicine.price)|number_format(2) }} TND</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
