{% extends 'base.html.twig' %}

{% block title %}Edit {{ medicine.name }} - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-pencil"></i> Edit Medicine</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('medicine_show', {id: medicine.id}) }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Medicine Details
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-capsule me-2"></i>Edit Medicine Information
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <!-- Medicine Name -->
                            <div class="col-md-6 mb-4">
                                <label for="name" class="form-label">
                                    <i class="bi bi-capsule me-2"></i>Medicine Name
                                </label>
                                <input type="text" class="form-control" id="name" name="name" 
                                       value="{{ medicine.name }}" required>
                                <small class="text-muted">Enter the complete medicine name</small>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6 mb-4">
                                <label for="category" class="form-label">
                                    <i class="bi bi-tags me-2"></i>Category
                                </label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="Analgesics" {{ medicine.category == 'Analgesics' ? 'selected' : '' }}>Analgesics</option>
                                    <option value="Antibiotics" {{ medicine.category == 'Antibiotics' ? 'selected' : '' }}>Antibiotics</option>
                                    <option value="Vitamins" {{ medicine.category == 'Vitamins' ? 'selected' : '' }}>Vitamins</option>
                                    <option value="Supplements" {{ medicine.category == 'Supplements' ? 'selected' : '' }}>Supplements</option>
                                    <option value="Cardiovascular" {{ medicine.category == 'Cardiovascular' ? 'selected' : '' }}>Cardiovascular</option>
                                    <option value="Digestive" {{ medicine.category == 'Digestive' ? 'selected' : '' }}>Digestive</option>
                                    <option value="Respiratory" {{ medicine.category == 'Respiratory' ? 'selected' : '' }}>Respiratory</option>
                                    <option value="Dermatology" {{ medicine.category == 'Dermatology' ? 'selected' : '' }}>Dermatology</option>
                                    <option value="Neurology" {{ medicine.category == 'Neurology' ? 'selected' : '' }}>Neurology</option>
                                    <option value="Other" {{ medicine.category == 'Other' ? 'selected' : '' }}>Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label for="description" class="form-label">
                                <i class="bi bi-file-text me-2"></i>Description
                            </label>
                            <textarea class="form-control" id="description" name="description" rows="3" required>{{ medicine.description }}</textarea>
                            <small class="text-muted">Provide detailed information about the medicine</small>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-3 mb-4">
                                <label for="quantity" class="form-label">
                                    <i class="bi bi-123 me-2"></i>Quantity
                                </label>
                                <input type="number" class="form-control" id="quantity" name="quantity" 
                                       value="{{ medicine.quantity }}" min="0" required>
                                <small class="text-muted">Units in stock</small>
                            </div>

                            <!-- Price -->
                            <div class="col-md-6 mb-4">
                                <label for="price" class="form-label">
                                    <i class="bi bi-currency-dollar me-2"></i>Price
                                </label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="price" 
                                           name="price" step="0.001" min="0" 
                                           value="{{ medicine.price }}" required>
                                    <span class="input-group-text">TND</span>
                                </div>
                                <small class="text-muted">Base price per unit</small>
                            </div>

                            <!-- Expiration Date -->
                            <div class="col-md-3 mb-4">
                                <label for="expiration_date" class="form-label">
                                    <i class="bi bi-calendar-x me-2"></i>Expiration Date
                                </label>
                                <input type="date" class="form-control" id="expiration_date" 
                                       name="expiration_date" 
                                       value="{{ medicine.expirationDate ? medicine.expirationDate|date('Y-m-d') : '' }}">
                                <small class="text-muted">Optional</small>
                            </div>
                        </div>

                        <!-- Profit Margin Display -->
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calculator fs-4 me-3"></i>
                                <div class="flex-grow-1">
                                    <strong>Current Profit Margin</strong>
                                    <div id="profitDisplay" class="mt-2">
                                        <span class="text-info">
                                            <strong>Price: {{ medicine.price|number_format(3) }} TND per unit</strong><br>
                                            <small>Suggested retail: {{ (medicine.price * 1.2)|number_format(3) }} TND (20% markup)</small>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stock Alert -->
                        {% if medicine.quantity < 10 %}
                        <div class="alert alert-danger mb-4">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Critical Stock Level!</strong> Only {{ medicine.quantity }} units remaining.
                        </div>
                        {% elseif medicine.quantity < 30 %}
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            <strong>Low Stock Warning!</strong> Only {{ medicine.quantity }} units remaining.
                        </div>
                        {% endif %}

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('medicine_show', {id: medicine.id}) }}" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
