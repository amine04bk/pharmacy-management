{% extends 'base.html.twig' %}

{% block title %}Add New Medicine - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-plus-circle"></i> Add New Medicine</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('medicine_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Catalog
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-capsule me-2"></i>Medicine Information
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <!-- Medicine Name -->
                            <div class="col-md-6 mb-4">
                                <label for="name" class="form-label">
                                    <i class="bi bi-capsule me-2"></i>Medicine Name
                                </label>
                                <input type="text" class="form-control" id="name" name="name" required>
                                <small class="text-muted">Enter the complete medicine name</small>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6 mb-4">
                                <label for="category" class="form-label">
                                    <i class="bi bi-tags me-2"></i>Category
                                </label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="Analgesics">Analgesics</option>
                                    <option value="Antibiotics">Antibiotics</option>
                                    <option value="Vitamins">Vitamins</option>
                                    <option value="Supplements">Supplements</option>
                                    <option value="Cardiovascular">Cardiovascular</option>
                                    <option value="Digestive">Digestive</option>
                                    <option value="Respiratory">Respiratory</option>
                                    <option value="Dermatology">Dermatology</option>
                                    <option value="Neurology">Neurology</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label for="description" class="form-label">
                                <i class="bi bi-file-text me-2"></i>Description
                            </label>
                            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                            <small class="text-muted">Provide detailed information about the medicine</small>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-3 mb-4">
                                <label for="quantity" class="form-label">
                                    <i class="bi bi-123 me-2"></i>Quantity
                                </label>
                                <input type="number" class="form-control" id="quantity" name="quantity" 
                                       min="0" required>
                                <small class="text-muted">Units in stock</small>
                            </div>

                            <!-- Price -->
                            <div class="col-md-6 mb-4">
                                <label for="price" class="form-label">
                                    <i class="bi bi-currency-dollar me-2"></i>Price
                                </label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="price" 
                                           name="price" step="0.001" min="0" required>
                                    <span class="input-group-text">TND</span>
                                </div>
                                <small class="text-muted">Base price per unit</small>
                            </div>

                            <!-- Expiration Date -->
                            <div class="col-md-3 mb-4">
                                <label for="expiration_date" class="form-label">
                                    <i class="bi bi-calendar-x me-2"></i>Expiration Date
                                </label>
                                <input type="date" class="form-control" id="expiration_date" 
                                       name="expiration_date">
                                <small class="text-muted">Optional</small>
                            </div>
                        </div>



                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('medicine_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Add Medicine
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
