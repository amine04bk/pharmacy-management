{% extends 'base.html.twig' %}

{% block title %}Orders - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-cart-check"></i> My Orders</h1>
</div>

<div class="animate-fade-in">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-check me-2"></i>Order History</span>
            <a href="{{ path('order_new') }}" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle me-1"></i>New Order
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Medicine</th>
                            <th>Supplier</th>
                            <th>Quantity</th>
                            <th>Order Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                        <tr>
                            <td><strong>#{{ order.id }}</strong></td>
                            <td>{{ order.medicine.name }}</td>
                            <td>{{ order.supplier.name }}</td>
                            <td><span class="badge bg-info">{{ order.quantity }}</span></td>
                            <td>{{ order.orderDate|date('M d, Y H:i') }}</td>
                            <td>
                                {% if order.status == 'pending' %}
                                    <span class="badge bg-warning">Pending</span>
                                {% elseif order.status == 'completed' %}
                                    <span class="badge bg-success">Completed</span>
                                {% else %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('order_show', {id: order.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-5">
                                <i class="bi bi-cart-x display-3 d-block mb-3"></i>
                                <h5>No orders yet</h5>
                                <p>Place your first order to get started</p>
                                <a href="{{ path('order_new') }}" class="btn btn-primary mt-2">
                                    <i class="bi bi-plus-circle me-1"></i>Create Order
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
