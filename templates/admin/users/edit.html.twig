{% extends 'base.html.twig' %}

{% block title %}Edit User - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-pencil"></i> Edit User</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('admin_users_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Users
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-person-badge me-2"></i>User Information
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Full Name -->
                        <div class="mb-4">
                            <label for="name" class="form-label">
                                <i class="bi bi-person me-2"></i>Full Name
                            </label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="{{ user.name }}" required>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>Email Address
                            </label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="{{ user.email }}" required>
                        </div>

                        <!-- Phone -->
                        <div class="mb-4">
                            <label for="phone" class="form-label">
                                <i class="bi bi-telephone me-2"></i>Phone Number
                            </label>
                            <input type="tel" class="form-control" id="phone" name="phone" 
                                   value="{{ user.phone }}" required>
                        </div>

                        <!-- City -->
                        <div class="mb-4">
                            <label for="city" class="form-label">
                                <i class="bi bi-geo-alt me-2"></i>City
                            </label>
                            <select class="form-select" id="city" name="city">
                                <option value="">Select City</option>
                                <option value="Tunis" {{ user.city == 'Tunis' ? 'selected' : '' }}>Tunis</option>
                                <option value="Sfax" {{ user.city == 'Sfax' ? 'selected' : '' }}>Sfax</option>
                                <option value="Sousse" {{ user.city == 'Sousse' ? 'selected' : '' }}>Sousse</option>
                                <option value="Kairouan" {{ user.city == 'Kairouan' ? 'selected' : '' }}>Kairouan</option>
                                <option value="Bizerte" {{ user.city == 'Bizerte' ? 'selected' : '' }}>Bizerte</option>
                                <option value="Gabès" {{ user.city == 'Gabès' ? 'selected' : '' }}>Gabès</option>
                                <option value="Ariana" {{ user.city == 'Ariana' ? 'selected' : '' }}>Ariana</option>
                                <option value="Gafsa" {{ user.city == 'Gafsa' ? 'selected' : '' }}>Gafsa</option>
                                <option value="Monastir" {{ user.city == 'Monastir' ? 'selected' : '' }}>Monastir</option>
                                <option value="Medenine" {{ user.city == 'Medenine' ? 'selected' : '' }}>Medenine</option>
                                <option value="Kasserine" {{ user.city == 'Kasserine' ? 'selected' : '' }}>Kasserine</option>
                                <option value="Ben Arous" {{ user.city == 'Ben Arous' ? 'selected' : '' }}>Ben Arous</option>
                                <option value="Nabeul" {{ user.city == 'Nabeul' ? 'selected' : '' }}>Nabeul</option>
                                <option value="Tataouine" {{ user.city == 'Tataouine' ? 'selected' : '' }}>Tataouine</option>
                                <option value="Tozeur" {{ user.city == 'Tozeur' ? 'selected' : '' }}>Tozeur</option>
                            </select>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <label for="address" class="form-label">
                                <i class="bi bi-house me-2"></i>Address
                            </label>
                            <textarea class="form-control" id="address" name="address" rows="2">{{ user.address }}</textarea>
                        </div>

                        <!-- Role -->
                        <div class="mb-4">
                            <label for="role" class="form-label">
                                <i class="bi bi-shield me-2"></i>Role
                            </label>
                            <select class="form-select" id="role" name="role" required>
                                <option value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in user.roles ? 'selected' : '' }}>Administrator</option>
                                <option value="ROLE_PHARMACY" {{ 'ROLE_PHARMACY' in user.roles ? 'selected' : '' }}>Pharmacy</option>
                                <option value="ROLE_SUPPLIER" {{ 'ROLE_SUPPLIER' in user.roles ? 'selected' : '' }}>Supplier</option>
                                <option value="ROLE_DELIVERY" {{ 'ROLE_DELIVERY' in user.roles ? 'selected' : '' }}>Delivery</option>
                            </select>
                        </div>

                        <!-- Active Status -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
                                       {{ user.isActive ? 'checked' : '' }}>
                                <label class="form-check-label" for="isActive">
                                    <i class="bi bi-toggle-on me-2"></i>Active Account
                                </label>
                            </div>
                        </div>

                        <!-- Password Section -->
                        <hr class="my-4">
                        <h5 class="mb-3"><i class="bi bi-key me-2"></i>Change Password</h5>
                        <p class="text-muted small">Leave blank to keep current password</p>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>

                        <div class="mb-4">
                            <label for="password_confirm" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="password_confirm" name="password_confirm">
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
