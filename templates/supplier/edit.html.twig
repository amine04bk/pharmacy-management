{% extends 'base.html.twig' %}

{% block title %}Edit {{ supplier.name }} - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-pencil"></i> Edit Supplier</h1>
</div>

<div class="animate-fade-in">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="{{ path('supplier_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Suppliers
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-building me-2"></i>Supplier Information
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Company Name -->
                        <div class="mb-4">
                            <label for="name" class="form-label">
                                <i class="bi bi-building me-2"></i>Company Name
                            </label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="{{ supplier.name }}" required>
                            <small class="text-muted">Enter the legal company name</small>
                        </div>

                        <div class="row">
                            <!-- Email -->
                            <div class="col-md-6 mb-4">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <input type="email" class="form-control" id="email" name="email" 
                                       value="{{ supplier.email }}" required>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6 mb-4">
                                <label for="phone" class="form-label">
                                    <i class="bi bi-telephone me-2"></i>Phone Number
                                </label>
                                <input type="tel" class="form-control" id="phone" name="phone" 
                                       value="{{ supplier.phone }}" required>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <label for="address" class="form-label">
                                <i class="bi bi-house me-2"></i>Address
                        <div class="mb-4">
                            <textarea class="form-control" id="address" name="address" rows="2">{{ supplier.address }}</textarea>
                            <small class="text-muted">Physical address of supplier</small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('supplier_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
