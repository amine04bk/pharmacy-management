{% extends 'base.html.twig' %}

{% block title %}Suppliers - PharmaCare{% endblock %}

{% block body %}
<div class="page-header animate-fade-in">
    <h1><i class="bi bi-truck"></i> Suppliers Management</h1>
</div>

<div class="animate-fade-in">
    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card primary">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ suppliers|length }}</h3>
                        <p><i class="bi bi-truck me-2"></i>Total Suppliers</p>
                    </div>
                    <i class="bi bi-truck"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card success">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ suppliers|length }}</h3>
                        <p><i class="bi bi-check-circle me-2"></i>All Active</p>
                    </div>
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card danger">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>0</h3>
                        <p><i class="bi bi-x-circle me-2"></i>Inactive</p>
                    </div>
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card warning">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3>{{ suppliers|length }}</h3>
                        <p><i class="bi bi-box-seam me-2"></i>Products</p>
                    </div>
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list me-2"></i>All Suppliers</span>
            <div class="d-flex gap-2">
                <input type="search" class="form-control form-control-sm" placeholder="Search suppliers..." id="searchSuppliers">
                <a href="{{ path('supplier_new') }}" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Supplier
                </a>
            </div>
        </div>
        <div class="card-body">
            {% if suppliers|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="suppliersTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Company Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for supplier in suppliers %}
                        <tr>
                            <td><strong>#{{ supplier.id }}</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-building fs-4 text-primary me-2"></i>
                                    <strong>{{ supplier.name }}</strong>
                                </div>
                            </td>
                            <td>
                                <a href="mailto:{{ supplier.email }}" class="text-decoration-none">
                                    <i class="bi bi-envelope me-1"></i>{{ supplier.email }}
                                </a>
                            </td>
                            <td>
                                <a href="tel:{{ supplier.phone }}" class="text-decoration-none">
                                    <i class="bi bi-telephone me-1"></i>{{ supplier.phone }}
                                </a>
                            </td>
                            <td>
                                {% if supplier.address %}
                                    <i class="bi bi-geo-alt me-1"></i>{{ supplier.address|slice(0, 50) }}{% if supplier.address|length > 50 %}...{% endif %}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Active
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('supplier_edit', {id: supplier.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('supplier_delete', {id: supplier.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this supplier?')" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-truck display-1 text-muted mb-3 d-block"></i>
                <p class="text-muted mb-3">No suppliers found.</p>
                <a href="{{ path('supplier_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Add First Supplier
                </a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.getElementById('searchSuppliers').addEventListener('keyup', function() {
    var input = this.value.toLowerCase();
    var rows = document.querySelectorAll('#suppliersTable tbody tr');
    
    rows.forEach(function(row) {
        var text = row.textContent.toLowerCase();
        row.style.display = text.includes(input) ? '' : 'none';
    });
});
</script>
{% endblock %}
